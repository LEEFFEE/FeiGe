<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/checkable_file_item"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/file_explorer_file_icon"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_gravity="center"
            android:focusable="false"
            android:src="@mipmap/uspace_default_file"/>

        <TextView
            android:id="@+id/file_explorer_flodername_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:focusable="false"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/file_explorer_file_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:focusable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_explorer_filename_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:maxLines="1"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/file_explorer_filesize_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/file_explorer_filedate_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>

        <CheckBox
            android:id="@+id/file_explorer_file_cbox"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/msg_item_checkbox"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>

</LinearLayout>
