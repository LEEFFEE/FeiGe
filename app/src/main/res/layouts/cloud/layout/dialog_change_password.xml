<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:text="更改密码"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/dialog_old_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入原始密码"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:id="@+id/dialog_new_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/dialog_new_password_again_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <Button
            android:id="@+id/dialog_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_backup_bg_btn"
            android:text="确定"
            android:textColor="@drawable/selector_backup_text_color"/>

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_backup_bg_btn"
            android:text="取消"
            android:textColor="@drawable/selector_backup_text_color"/>
    </LinearLayout>

</LinearLayout>