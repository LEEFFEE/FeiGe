<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <cn.leeffee.feige.widget.USpaceToolBar
        android:id="@+id/trans_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_title="@string/tab_trans"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/trans_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/uspace_colorPrimaryDark"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/uspace_colorPrimaryDark"
        app:tabTextColor="@color/uspace_textColorSecondary"/>

    <!--<com.flyco.tablayout.SegmentTabLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"/>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/trans_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/trans_bottom_menu_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/trans_selAll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_backup_bg_btn"
            android:text="全选"
            android:textColor="@drawable/selector_backup_text_color"/>

        <Button
            android:id="@+id/trans_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:layout_weight="1"
            android:background="@drawable/selector_backup_bg_btn"
            android:text="删除"
            android:textColor="@drawable/selector_backup_text_color"/>
    </LinearLayout>
</LinearLayout>
